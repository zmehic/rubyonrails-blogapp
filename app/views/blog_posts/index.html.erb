<h1>Moj controller</h1>

<%@posts.each do |htmlpost|%>
  <div>

    <h2><%= link_to htmlpost.title,htmlpost%></h2>
    <% if htmlpost.draft?%>
    <div class = "p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% end %>
    <% if htmlpost.scheduled?%>
    <div class = "p-2 rounded bg-blue-100 text-gray-900">Scheduled</div>
    <% end %>
    <h4><%= htmlpost.body%></h4>
  </div>
<%end%>
